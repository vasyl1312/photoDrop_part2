{
  "openapi": "3.0.3",
  "info": {
    "title": "Authentication API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "///"
    }
  ],
  "tags": [{ "name": "Authentication" }],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Send authentication code to phone number",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "JSON-body request",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/PhoneNumber"
            },
            "content": {
              "application/json": {}
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication code sent successfully",
            "content": {
              "application/json": {
                "example": {
                  "phone": "+1234567890",
                  "code": "484855"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PhoneNumber": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string",
            "description": "Phone number for authentication",
            "example": "+1234567890"
          }
        },
        "required": ["phone"]
      }
    }
  }
}
